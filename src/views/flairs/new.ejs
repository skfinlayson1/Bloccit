<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1>Create Flair</h1>
      <form action="/topics/<%= topicId %>/flairs/create" method="post">
        <div class="form-group">
          <label for="name">Flair name</label>
          <input type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Enter Flair Name">
        </div>
        <div class="form-group">
          <label for="color">Color of Flair</label>
          <textarea rows="1" class="form-control" name="color" placeholder="Enter Flair Color"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>